{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "header-max-length": [
      2,
      "always",
      100
    ],
    "type-enum": [
      2,
      "always",
      [
        "breaking",
        "chore",
        "feat",
        "ci",
        "fix",
        "refactor",
        "config",
        "test",
        "docs",
        "norelease"
      ]
    ]
  }
}
